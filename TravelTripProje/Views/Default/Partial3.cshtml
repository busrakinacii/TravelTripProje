@using TravelTripProje.Models.Classes
@model List<blog>

<div class="padding1">
    <h4>En Beğendiğim Yerler</h4>
    <div class="box-left">

        @foreach (var x in Model)
        {
            <div class="bot-img">
                <img src="@x.BlogImage" alt="" style="width:120px; height:65px" />
            </div>
            <div class="bot-desc">
                <p>@x.Aciklama.Substring(0, x.Aciklama.Substring(0, 70).LastIndexOf(" "))</p>
            </div>
            <div class="clear"></div>
        }

    </div>
    @Html.Action("Partial4", "Default")
</div>
