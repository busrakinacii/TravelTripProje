@using TravelTripProje.Models.Classes
@model List<blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Default.cshtml";
}

<!DOCTYPE HTML>
<html>
<body>
    <div class="content">
        <div class="wrap">
            <div class="about">
                <h3>Rehber Sayfası</h3>
                <img src="~/web/images/tatil.jpg" alt="" width="850" />
            </div>
            <div class="grids">
                <div class="box1">
                    <div class="padding">
                        <h4>En Popüler 10 Blog</h4>

                        <ul class="list list-pad">
                            @foreach (var x in Model)
                            {
                                <li class="list-bg"><span>@x.ID</span><a href="/Blog/BlogDetay/@x.ID">@x.Baslik</a></li>
                            }
                        </ul>
                        <a href="#" class="link1">Devamını Gör...</a>
                    </div>
                    <div class="desti-middle">
                        @Html.Action("Gorsel", "Rehber")
                    </div>
                    @Html.Action("Populer", "Rehber")
                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
</body>
</html>
